<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="POST">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label h5">Title</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="postTitle">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label h5">Post</label>
        <textarea name="postBody" class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
    </div>
    <button class="btn btn-primary btn-sm" type="submit" name="publish" value="Publish">Publish</button>
</form>

<%- include('partials/footer'); -%>